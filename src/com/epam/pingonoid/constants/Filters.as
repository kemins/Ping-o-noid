package com.epam.pingonoid.constants
{
	import flash.filters.DropShadowFilter;
	import flash.filters.GlowFilter;

	public class Filters
	{
		
		/**
		 * getDefaultGlow
		 * 
		 */		
		public static function getDefaultGlow() : Array
		{
			return [new GlowFilter(0, 0.5)];
		}
		
		
		/**
		 * getDefaultShadow
		 * 
		 */		
		public static function getDefaultShadow(distance:Number = 4.0) : Array
		{
			return [new DropShadowFilter(distance)];
		}
	}
}